<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="488.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="visualization.controller.PdbViewController">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
    <Button fx:id="load" layoutX="5.0" layoutY="73.0" mnemonicParsing="false" onAction="#loadFile" prefHeight="27.0"
            prefWidth="216.0" text="Load file from computer"/>
    <Button fx:id="selectAll" layoutX="236.0" layoutY="37.0" mnemonicParsing="false" onAction="#selectNone"
            text="Select None"/>
    <Button fx:id="selectNone" layoutX="236.0" mnemonicParsing="false" onAction="#selectAll" prefHeight="27.0"
            prefWidth="93.0" text="Select all"/>
    <Button fx:id="edgePlus" layoutX="336.0" mnemonicParsing="false" onAction="#edgePlus" text="Edge++"/>
    <Button fx:id="edgeMinus" layoutX="336.0" layoutY="37.0" mnemonicParsing="false" onAction="#edgeMinus"
            prefHeight="27.0" prefWidth="66.0" text="Edge--"/>
    <Button fx:id="nodePlus" layoutX="411.0" mnemonicParsing="false" onAction="#nodePlus" text="Node++"/>
    <Button fx:id="nodeMinus" layoutX="411.0" layoutY="37.0" mnemonicParsing="false" onAction="#nodeMinus"
            prefHeight="27.0" prefWidth="68.0" text="Node--"/>
    <Button fx:id="undo" layoutX="236.0" layoutY="73.0" mnemonicParsing="false" onAction="#undo" prefHeight="27.0"
            prefWidth="93.0" text="Undo"/>
    <Button fx:id="redo" layoutX="236.0" layoutY="106.0" mnemonicParsing="false" onAction="#redo" prefWidth="93.0"
            text="Redo"/>
    <Slider fx:id="slider" layoutX="341.0" layoutY="112.0" min="10.0"/>
    <Label fx:id="zoom" layoutX="341.0" layoutY="78.0" prefHeight="17.0" prefWidth="140.0" text="Zoom"/>
    <Button layoutX="5.0" layoutY="106.0" mnemonicParsing="false" onAction="#showHelp" prefHeight="27.0"
            prefWidth="216.0" text="About PDB Viewer"/>
    <TextField fx:id="pdbId" layoutX="3.0" layoutY="37.0" prefHeight="27.0" prefWidth="140.0"
               promptText="Enter PDB ID"/>
    <Button fx:id="oK" ellipsisString="Download" layoutX="143.0" layoutY="37.0" onAction="#find" prefHeight="27.0"
            prefWidth="11.0" text="Download"/>
    <Label layoutX="5.0" layoutY="6.0" prefHeight="17.0" prefWidth="216.0" text="Load a PDB file :"/>
</AnchorPane>
